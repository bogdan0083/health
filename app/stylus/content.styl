.care {
	min-height 522px
	background url('../images/working.jpg') no-repeat center / cover
	color white
	font-size 23px
	padding-top 88px
	text-align center
	&__in {
		width 772px
		margin auto
	}
	&__heading {
		margin-bottom 54px
		font-size 30px
		hm()
		span {
			color #1bd358
		}
		opacity 0
		&_animated {
			animation fadeInDown 1s ease forwards
		}
	}
	&__text {
		width 700px
		margin 0 auto
		padding-top 44px
		position relative
		&_animated:first-of-type {
			animation fadeInDown 1s ease forwards
			animation-delay 0.5s
		}
		&:first-of-type {
			margin-bottom 62px
			opacity 0
			&:before {
				content ''
				position absolute
				sprite($hat)
				top 0
				left 50%
				margin-left -(@width / 2)
			}
		}
		&_animated:last-of-type {
			opacity 0
			animation fadeInDown 1s ease forwards
			animation-delay 1s
		}
		&:last-of-type {
			&:before {
				content ''
				position absolute
				sprite($graph)
				top 0
				left 50%
				margin-left -(@width / 2)
			}
		}
	}
}
