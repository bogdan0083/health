.promo {
	height 488px
	color white
	background-image url('../images/promo-bg.jpg')
	background-attachment fixed
	background-repeat no-repeat
	background-position center
	background-size cover
	margin-top 66px
	position relative
	padding-top 130px
	&:after {
		content ''
		position absolute
		width 100%
		height 100%
		left 0
		top 0
		background-color #4a4a4a
		background-image background-image -webkit-linear-gradient(117deg, rgba(0, 0, 0, 0.34) 0%, transparent 100%)
		background-image background-image -o-linear-gradient(117deg, rgba(0, 0, 0, 0.34) 0%, transparent 100%)
		background-image background-image linear-gradient(207deg, rgba(0, 0, 0, 0.34) 0%, transparent 100%)
		opacity 0.7
	}
	&__in {
		width 772px
		margin 0 auto
	}
	&__heading {
		position relative
		z-index 1
		font-size 40px
		width 720px
		margin-bottom 22px
		opacity 0
		animation fadeInLeft 1.2s ease forwards
		
	}
	&__subheading {
		position relative
		z-index 1
		color #d6d6d6
		hl()
		font-size 30px
		opacity 0
		animation fadeInRight 1.2s ease forwards
		animation-delay 0.5s
	}
}
.learn-more {
	height 208px
	text-align center
	padding-top 70px
	&__wrap {
		opacity 0
		animation fadeInUp 1.2s ease forwards
		animation-delay 0.9s
	}
	&__link {
		color #044b02
		font-size 20px
		hm()
		border-bottom 1px dashed #044b02
		display inline-block
		transition all 0.2s ease
		&:hover {
			transform translateY(-6px)
		}
	}
	
	span {
		margin 0 20px
	}
	&__button {
		background-color #15c34f
		border-radius 10px
		box-shadow 0 0 5.6px 0.4px rgba(0, 0, 0, 0.27)
		display inline-block
		height 54px
		line-height 56px
		color white
		padding 0 15px
		text-shadow 0.1px -2px 16px rgba(0, 0, 0, 0.53)
		cursor pointer
		transition all 0.2s ease
		&:hover {
			transform translateY(-6px)
			box-shadow 0 0 5.6px 0.4px rgba(0, 0, 0, 0.37)
		}
	}
}
